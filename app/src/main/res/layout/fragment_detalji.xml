<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lejaut"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lejaut1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="0dp">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/action"/>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <Button
                                android:id="@+id/buttonBookmark"
                                android:layout_width="match_parent"
                                android:layout_height="37dp"
                                android:text="Bookmark" />

                            <Button
                                android:id="@+id/buttonUnBookmark"
                                android:layout_width="match_parent"
                                android:layout_height="37dp"
                                android:text="Unbookmark"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/textIme"
                                android:layout_width="match_parent"
                                android:layout_height="62dp"
                                android:text="TextView"
                                android:textSize="40sp" />
                            </LinearLayout>
                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewRodjenje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="TextView"/>

                    <TextView
                        android:id="@+id/textViewSmrt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="TextView"
                        android:visibility="invisible"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/textViewMjesto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.11"
                    android:gravity="center_vertical"
                    android:text="TextView"/>

                <TextView
                    android:id="@+id/textViewSpol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.11"
                    android:gravity="center_vertical"
                    android:text="TextView"/>

                <TextView
                    android:id="@+id/textViewImdb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.11"
                    android:gravity="center_vertical"
                    android:text="TextView"/>

                <TextView
                    android:id="@+id/textViewBiografija"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.64"
                    android:maxLines="16"
                    android:scrollbars="vertical"
                    android:text="TextView"/>

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="share" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>