<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:layout_gravity="center_vertical|center"
                                             tools:context="ba.unsa.etf.rma.rasimsabanovic.rma_projekat.GlumciAktivnost">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/buttonGlumci"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:text="glumci"/>

        <Button
            android:id="@+id/buttonReziseri"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:text="režiseri"/>

        <Button
            android:id="@+id/buttonZanrovi"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:text="žanrovi"/>

        <ListView
            android:id="@+id/listaGlumci"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
